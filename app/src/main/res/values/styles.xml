<resources>

    <!--
        <item name="[name_in_attrs.xml]">@color/[name_in_colors.xml]</item>

        If referencing in a layout file (xml) use tag "?[name]"
        If referencing programatically (java) use:
            TypedValue a = new TypedValue();
            context.getTheme().resolveAttribute(R.attr.[name], a, true);
            Color color = a.data;
    -->

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="gameBackgroundColor">@color/colorBackgroundLight</item>
        <item name="joystick_bg">@color/joystickBackgroundLight</item>
        <item name="joystick_handle">@color/joystickHandleLight</item>
        <item name="settingsTextColor">@color/settingsTextColorLight</item>
        <item name="gameButtonColor">@color/gameButtonBGColorLight</item>
        <item name="gameButtonTextColor">@color/gameButtonTextColorLight</item>
        <item name="buttonHeight">75dp</item>
        <item name="buttonHorMargin">25dp</item>
        <item name="buttonVerMargin">15dp</item>
        <item name="buttonTextColor">@color/buttonTextLight</item>
        <item name="buttonTextSize">25sp</item>
        <item name="buttonBackground">@drawable/button_frame_med</item>
        <item name="inGameTextColor">@color/inGameTextLight</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="gameBackgroundColor">@color/colorBackgroundDark</item>
        <item name="joystick_bg">@color/joystickBackgroundDark</item>
        <item name="joystick_handle">@color/joystickHandleDark</item>
        <item name="settingsTextColor">@color/settingsTextColorDark</item>
        <item name="gameButtonColor">@color/gameButtonBGColorDark</item>
        <item name="gameButtonTextColor">@color/gameButtonTextColorDark</item>
        <item name="buttonHeight">75dp</item>
        <item name="buttonHorMargin">25dp</item>
        <item name="buttonVerMargin">15dp</item>
        <item name="buttonTextColor">@color/buttonTextDark</item>
        <item name="buttonTextSize">25sp</item>
        <item name="buttonBackground">@drawable/button_frame_med</item>
        <item name="inGameTextColor">@color/inGameTextDark</item>
    </style>

    <style name="leaderboard_name">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="leaderboard_score">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>